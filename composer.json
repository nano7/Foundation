{
    "name"       : "nano7/foundation",
    "description": "The Nano7 Foundation package.",
    "license"    : "GPL-3.0-only",

    "authors": [
        {
            "name" : "Bruno Goncalves",
            "email": "bugotech@gmail.com"
        }
    ],

    "require": {
        "php"                   : ">=5.5.0",
        "illuminate/config"     : "5.4.*",
        "illuminate/container"  : "5.4.*",
        "illuminate/translation": "5.4.*",
        "nano7/support"         : "dev-master"
    },

    "require_dev": {
        "phpunit/phpunit": "^5.7"
    },

    "autoload": {
        "files": [
            "src/helpers.php"
        ],

        "psr-4": {
            "Nano7\\Foundation\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "minimum-stability": "dev",
    "prefer-stable"    : true
}
